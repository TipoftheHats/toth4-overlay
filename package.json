{
  "name": "toth4-overlay",
  "homepage": "http://tipofthehats.org/",
  "authors": [
    "Alex Van Camp <email@alexvan.camp>"
  ],
  "scripts": {
    "static": "eslint **/*.js",
    "test": "npm run static"
  },
  "description": "The main broadcast assets for Tip of the Hats 2016.",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.4.1",
    "deep-equal": "^1.0.1",
    "lastfm": "^0.9.2",
    "osc": "^2.1.0",
    "q": "^1.4.1",
    "request-promise": "^3.0.0",
    "twemoji": "^2.0.5",
    "twitter": "^1.2.5"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "eslint": "^2.12.0",
    "eslint-config-xo": "^0.15.0",
    "eslint-plugin-babel": "^3.2.0"
  },
  "nodecg": {
    "compatibleRange": "~0.8.0",
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "dotafortress.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "td_talkback.html",
        "width": 1280,
        "height": 720,
        "singleInstance": true
      },
      {
        "file": "fm_talkback.html",
        "width": 1280,
        "height": 720,
        "singleInstance": true
      }
    ],
    "dashboardPanels": [
      {
        "name": "master",
        "title": "Master Controls",
        "width": 2,
        "file": "master.html",
        "headerColor": "#f47425"
      },
      {
        "name": "donations",
        "title": "Donations",
        "width": 2,
        "file": "donations.html",
        "headerColor": "#f47425"
      },
      {
        "name": "lowerthird",
        "title": "Lowerthird",
        "width": 2,
        "file": "lowerthird.html",
        "headerColor": "#f47425"
      },
      {
        "name": "scoreboard",
        "title": "Scoreboard",
        "width": 2,
        "file": "scoreboard.html",
        "headerColor": "#f47425"
      },
      {
        "name": "now-playing",
        "title": "Now Playing",
        "width": 2,
        "file": "now-playing.html",
        "headerColor": "#f47425"
      },
      {
        "name": "total",
        "title": "Total",
        "width": 2,
        "file": "total.html",
        "headerColor": "#f47425"
      },
      {
        "name": "edit-total",
        "title": "Edit Total",
        "width": 2,
        "dialog": true,
        "dialogButtons": [
          {
            "name": "save",
            "type": "confirm"
          },
          {
            "name": "cancel",
            "type": "dismiss"
          }
        ],
        "file": "dialogs/edit-total.html"
      },
      {
        "name": "twitter",
        "title": "Twitter",
        "width": 3,
        "file": "twitter.html",
        "headerColor": "#f47425"
      },
      {
        "name": "schedule",
        "title": "Schedule",
        "width": 4,
        "file": "schedule.html",
        "headerColor": "#f47425"
      },
      {
        "name": "dota-fortress",
        "title": "Dota Fortress",
        "width": 4,
        "file": "dota-fortress.html",
        "headerColor": "#f47425"
      }
    ],
    "soundCues": [
      {
        "name": "image_in",
        "assignable": false,
        "defaultFile": "sound/image_in.ogg"
      },
      {
        "name": "image_out",
        "assignable": false,
        "defaultFile": "sound/image_out.ogg"
      },
      {
        "name": "lowerthird_in",
        "assignable": false,
        "defaultFile": "sound/lowerthird_in.ogg"
      },
      {
        "name": "lowerthird_out",
        "assignable": false,
        "defaultFile": "sound/lowerthird_out.ogg"
      },
      {
        "name": "scoreboard_in",
        "assignable": false,
        "defaultFile": "sound/scoreboard_in.ogg"
      },
      {
        "name": "scoreboard_out",
        "assignable": false,
        "defaultFile": "sound/scoreboard_out.ogg"
      },
      {
        "name": "tweet_in",
        "assignable": false,
        "defaultFile": "sound/tweet_in.ogg"
      },
      {
        "name": "tweet_out",
        "assignable": false,
        "defaultFile": "sound/tweet_out.ogg"
      },
      {
        "name": "notification_tier3",
        "assignable": false,
        "defaultFile": "sound/notification_tier3.ogg"
      },
      {
        "name": "challenge_accepted",
        "assignable": false,
        "defaultFile": "sound/challenge_accepted.ogg"
      }
    ]
  }
}
